[flake8]
# Flake8 yapılandırması
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .eggs,
    *.egg,
    build,
    dist,
    .pytest_cache,
    .mypy_cache,
    logs
max-complexity = 15
per-file-ignores =
    __init__.py:F401
    tests/*:D
docstring-convention = google
import-order-style = google
